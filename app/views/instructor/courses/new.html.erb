<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new course</h1>
  <%= simple_form_for @course, :url => instructor_courses_path do |f| %>
    <div class="form-group">
    <%= f.input :title %>
    </div>
    <div class="form-group">
    <%= f.input :description %>
    </div>
    <div class="form-group">
    <%= f.input :cost %>
    </div>
    <div class="form-group">
    <%= f.input :image %>
    </div>
    <div class="form-group">
    <%= f.submit "Create Course", :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <br />
</div>